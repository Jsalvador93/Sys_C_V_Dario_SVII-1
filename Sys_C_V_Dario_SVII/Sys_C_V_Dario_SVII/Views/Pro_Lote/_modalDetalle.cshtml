@model Sys_C_V_Dario_SVII.Models.Mod_Compra.Pro_Lote.Pro_LoteBE

<div class="modal fade" id="MDetalles" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" id="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title" id="exampleModalLabel">Detalle</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form>
                        <div class="col-md-12">
                            <div class="form-group">
                                <h4 class="col-md-3">Detalle del Lote :</h4>
                                <h4 class="col-md-3">@Html.DisplayFor(model => model.i_idLote)</h4>
                                <h4 class="col-md-3">Fecha fabricación :</h4>
                                <h4 class="col-md-3">@Html.DisplayFor(model => model.dt_fchFabricacion)</h4>
                                <h4 class="col-md-4">Fecha vencimiento :</h4>
                                <h4 class="col-md-4">@Html.DisplayFor(model => model.dt_fchVencimiento)</h4>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Lote</th>
                                            <th>Descripcion</th>
                                            <th>Cantidad</th>
                                            <th>Registro</th>
                                            <th>Unidad de Compra</th>
                                            <th>Unidad de Venta</th>
                                        </tr>
                                    </thead>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model.oListLoteDetalle)
                                        {
                                            <tbody>
                                                <tr>
                                                    <td>@Html.DisplayTextFor(i => item.oLoteBE.i_idLote)</td>
                                                    <td>@Html.DisplayTextFor(i => item.oProductoBE.vc_dscpProducto)</td>
                                                    <td>@Html.DisplayTextFor(i => item.f_cantidad)</td>
                                                    <td>@Html.DisplayTextFor(i => item.dt_fchIgrLote)</td>
                                                    <td>@Html.DisplayTextFor(i => item.oUnidProducto.oUnidCompra.vc_dscpUnidad)</td>
                                                    <td>@Html.DisplayTextFor(i => item.oUnidProducto.oUnidVenta.vc_dscpUnidad)</td>
                                                </tr>
                                            </tbody>
                                        }
                                    }
                                </table>
                            </div>
                        </div>
                        <div class="TotalProducto">
                            <h4 class="col-md-10">Total de Productos : </h4>
                            <h4 class="col-md-2">@Html.DisplayFor(model => model.totalCantidad)</h4>
                        </div>
                        <style>
                            .TotalProducto {
                                text-align: right;
                            }
                        </style>

                    </form>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default">Editar</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

