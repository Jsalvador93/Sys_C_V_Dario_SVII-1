@model Sys_C_V_Dario_SVII.Models.Mod_Venta.Vta_Venta.Vta_VentaBE

<div class="modal fade" id="MDetalles" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" id="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title" id="exampleModalLabel">Detalle</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <form>
                        <div class="col-md-12">
                            <div class="form-group">
                                <h4 class="col-md-3">Detalle de la Venta :</h4>
                                <h4 class="col-md-3">@Html.DisplayFor(model => model.i_idVenta)</h4>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Detalle</th>
                                            <th>Descripcion</th>
                                            <th>Cantidad</th>
                                            <th>Total Producto</th>
                                        </tr>
                                    </thead>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model.oListVentaDetalle)
                                        {
                                            <tbody>
                                                <tr>
                                                    <td>@Html.DisplayTextFor(i => item.i_idVntDetalle)</td>
                                                    <td>@Html.DisplayTextFor(i => item.oProductoBE.vc_dscpProducto)</td>
                                                    <td>@Html.DisplayTextFor(i => item.f_cntPrdVntDetalle)</td>
                                                    <td>@Html.DisplayTextFor(i => item.f_totalVntDetalle)</td>
                                                </tr>
                                            </tbody>}
                                    }
                                </table>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <h4 class="col-md-2 pull-right">@Html.DisplayFor(model => model.subTotal)</h4>
                                <h4 class="col-md-2 pull-right">Sub Total :</h4>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <h4 class="col-md-2 pull-right">S/ 0.00</h4>
                                <h4 class="col-md-2 pull-right">IGV :</h4>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <h4 class="col-md-2 pull-right">@Html.DisplayFor(model => model.subTotal)</h4>
                                <h4 class="col-md-2 pull-right">Total Neto :</h4>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default">Editar</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>

            </div>
        </div>
    </div>
</div>
