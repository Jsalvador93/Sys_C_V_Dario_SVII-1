
@{
    ViewBag.Title = "RegistrarMovimiento";
}
<section class="content-header">
    <h1>Registrar Ingreso o Egreso</h1>
</section>
<!-- Main content -->
<div class="box  box-primary">
    <h4>
        Caja
    </h4>
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-2 col-md-2 col-lg-1" for="_Caja">Caja:</label>
                    <div class="col-sm-4 col-md-4 col-lg-5">
                        <input type="text" class="form-control" name="_caja">
                    </div>
                    <label for="_Cajero" class="col-sm-2 col-md-2 col-lg-1">Cajero:</label>
                    <div class="col-sm-4 col-md-4 col-lg-5">
                        <input type="text" class="form-control" name="_Cajero">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="box  box-primary">
    <h4>Detalle Movimiento</h4>
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <label for="_Cajero" class="col-sm-3 col-md-2 col-lg-2">Denominacion</label>
                    <div class="col-sm-6 col-md-8 col-lg-9">
                        <select class="form-control" name="">
                            <option>DENA</option>
                            <option>DENB</option>
                        </select>
                    </div>
                    <div class="col-sm-2 col-md-1 col-lg-1">
                        <button type="button" class="btn btn-default" name="btnNuevoDenominacion"> Nuevo</button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label for="_Concepto" class="col-sm-3 col-md-2 col-lg-2">Concepto</label>
                    <div class="col-sm-6 col-md-8 col-lg-9">
                        <select class="form-control" name="">
                            <option>CONA</option>
                            <option>CONB</option>
                        </select>

                    </div>
                    <div class="col-sm-2 col-md-1 col-lg-1">
                        <button type="button" class="btn btn-default" name="btnNuevoConcepto">Nuevo</button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-3 col-md-2 col-lg-2">
                        <input type="radio" name="optradio">&nbsp; Ingreso
                    </label>
                    <label class="col-sm-3 col-md-2 col-lg-2">
                        <input type="radio" name="optradio">&nbsp; Egreso
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="box  box-primary">
    <h4>
        Detalle Documento
    </h4>
    <form class="form">
        <div class="box-body">
            <div class="form-group">
                <div class="row">
                    <label for="_tipDocumento" class="col-sm-4 col-md-3 col-lg-2">Tipo de Documento:</label>
                    <div class="col-sm-8 col-md-9 col-lg-10">
                        <select class="form-control" name="_tipDocumento">
                            <option>TPDOC1</option>
                            <option>TPDOC2</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-2 col-md-2 col-lg-1" for="_Ruc">RUC:</label>
                    <div class="col-sm-4 col-md-4 col-lg-5">
                        <input type="text" class="form-control" name="_Ruc">
                    </div>
                    <label for="_RznSocial" class="col-sm-2 col-md-2 col-lg-1">Rzn Social:</label>
                    <div class="col-sm-4 col-md-4 col-lg-5">
                        <textarea class="form-control" rows="1" name="_RznSocial"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label for="_Monto" class="col-sm-2 col-md-2 col-lg-1">Monto:</label>
                    <div class="col-sm-10 col-md-10 col-lg-11">
                        <input type="text" class="form-control" name="_Monto">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="box box-primary">
    <h4>Agregar/Eliminar/Editar</h4>
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <label for="_item" class="col-sm-2 col-md-2 col-lg-1">Item:</label>
                    <div class="col-sm-10 col-md-10 col-lg-11 ">
                        <input type="text" name="_item" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label for="_item" class="col-sm-2 col-md-2 col-lg-1">Cantidad:</label>
                    <div class="col-sm-4 col-md-4 col-lg-5 ">
                        <input type="text" name="_item" class="form-control" />
                    </div>
                    <label for="_item" class="col-sm-2 col-md-2 col-lg-1">Monto:</label>
                    <div class="col-sm-4 col-md-4 col-lg-5 ">
                        <input type="text" name="_item" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 col-sm-2 col-md-1 col-lg-1">
                        <button type="button" class="btn btn-default btn-xs" width="100%">Agregar</button>
                    </div>
                    <div class="col-xs-3 col-sm-2 col-md-1 col-lg-1">
                        <button type="button" class="btn btn-default btn-xs" width="100%">Guardar</button>
                    </div>
                    <div class="col-xs-6 col-sm-2 col-md-1 col-lg-1">
                        <button type="button" class="btn btn-default btn-xs" width="100%">Cancelar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="box  box-primary">
    <h4></h4>
    <div class="box-body">
        <form class="form">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tr>
                                <th>Item</th>
                                <th>Cantidad</th>
                                <th>Monto</th>
                                <th>Operacion</th>
                            </tr>
                            <tr>
                                <th>Gaseosa</th>
                                <th>2</th>
                                <th>40</th>
                                <th>
                                    <button type="button" name="button" class="btn btn-sucess btn-xs">Editar</button>
                                    <button type="button" name="button" class="btn btn-sucess btn-xs">Quitar</button>
                                </th>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
