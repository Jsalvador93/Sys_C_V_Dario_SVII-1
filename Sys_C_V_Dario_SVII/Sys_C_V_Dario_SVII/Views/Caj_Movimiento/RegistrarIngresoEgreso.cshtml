
@{
    ViewBag.Title = "RegistrarMovimiento";
    List<SelectListItem> oListSelectItemDenominacion = new List<SelectListItem>();
    oListSelectItemDenominacion.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });
    List<SelectListItem> oListSelectItemConcepto = new List<SelectListItem>();
    oListSelectItemConcepto.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });
    List<SelectListItem> oListSelectItemTipDocumento = new List<SelectListItem>();
    oListSelectItemTipDocumento.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });
}
<section class="content-header">
    <h1>Registrar Ingreso o Egreso</h1>
</section>
<!-- Main content -->
<div class="box  box-primary">
    <h4>
        Caja
    </h4>
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <label class="control-label" for="txtcaja">CAJA:</label>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-5">
                        @Html.TextBox("txtCaja", null , new { @class="form-control"} ) 
                    </div>
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <label class="control-label" for="lblCajero">CAJERO:</label>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-5">
                        @Html.TextBox("txtCajero", null, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="box  box-primary">
    <h4>Detalle Movimiento</h4>
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3 col-md-2 col-lg-2">
                        <label for="_Cajero" class="">DENOM:</label>
                    </div>
                    
                    <div class="col-sm-6 col-md-8 col-lg-9">
                        @Html.DropDownList("cboDenominacion",oListSelectItemDenominacion,new { @class = "form-control" })
                    </div>
                    <div class="col-sm-2 col-md-1 col-lg-1">
                        <button type="button" class="btn btn-default" name="btnNuevoDenominacion"> Nuevo</button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-3 col-md-2 col-lg-2">
                        <label for="_Concepto" class="">CONCEPTO:</label>
                    </div>
                    
                    <div class="col-sm-6 col-md-8 col-lg-9">
                        @Html.DropDownList("cboConcepto", oListSelectItemConcepto, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-2 col-md-1 col-lg-1">
                        <button type="button" class="btn btn-default" name="btnNuevoConcepto">Nuevo</button>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label class="col-sm-3 col-md-2 col-lg-2">
                        <input type="radio" name="optradio">&nbsp; Ingreso
                    </label>
                    <label class="col-sm-3 col-md-2 col-lg-2">
                        <input type="radio" name="optradio">&nbsp; Egreso
                    </label>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="box  box-primary">
    <h4>
        Detalle Documento
    </h4>
    <form class="form">
        <div class="box-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4 col-md-3 col-lg-2">
                        <label for="_tipDocumento" class="">TP DOC:</label>
                    </div>
                    
                    <div class="col-sm-8 col-md-9 col-lg-10">
                        @Html.DropDownList("cboTipDocumento", oListSelectItemTipDocumento, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <label class="" for="_Ruc">RUC:</label>
                    </div>
                    
                    <div class="col-sm-4 col-md-4 col-lg-5">
                       @Html.TextBox("txtRuc" , null , new { type="text" , @class="form-control"})
                    </div>
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <label class="" for="_Ruc">RZN SOCIAL::</label>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-5">
                        @Html.TextArea("txtRznSocial" , null , new { type = "text", @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <label for="_Monto" class="">Monto:</label>
                    </div>
                    
                    <div class="col-sm-10 col-md-10 col-lg-11">
                        @Html.TextBox("txtMonto" , null , new { type = "number", @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="box box-primary">
    <h4>Agregar/Eliminar/Editar</h4>
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <label for="_item" >ITEM:</label>
                    </div>
                    
                    <div class="col-sm-10 col-md-10 col-lg-11 ">
                        @Html.TextBox("txtItem" , null , new { type="text" , @class="form-control"})
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <label for="_item" class="">CANTIDAD:</label>
                    </div>
                    
                    <div class="col-sm-4 col-md-4 col-lg-5 ">
                        @Html.TextBox("txtCantidad", null, new { type = "number", @class = "form-control" })
                    </div>
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <label for="_item" class="">MONTO:</label>
                    </div>
                    
                    <div class="col-sm-4 col-md-4 col-lg-5 ">
                        @Html.TextBox("txtMntDetalle", null, new { type = "number", @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 col-sm-2 col-md-1 col-lg-1">
                        <button type="button" class="btn btn-default btn-xs" width="100%">Agregar</button>
                    </div>
                    <div class="col-xs-3 col-sm-2 col-md-1 col-lg-1">
                        <button type="button" class="btn btn-default btn-xs" width="100%">Guardar</button>
                    </div>
                    <div class="col-xs-6 col-sm-2 col-md-1 col-lg-1">
                        <button type="button" class="btn btn-default btn-xs" width="100%">Cancelar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="box  box-primary">
    <h4></h4>
    <div class="box-body">
        <form class="form">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tr>
                                <th>Item</th>
                                <th>Cantidad</th>
                                <th>Monto</th>
                                <th>Operacion</th>
                            </tr>
                            <tr>
                                <th>Gaseosa</th>
                                <th>2</th>
                                <th>40</th>
                                <th>
                                    <button type="button" name="button" class="btn btn-sucess btn-xs">Editar</button>
                                    @Html.Partial("_QuitarIngresoEgreso")
                                </th>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
