

@{
    ViewBag.Title = "Index";
    List<SelectListItem> oListSelectItemCajero = new List<SelectListItem>();
    oListSelectItemCajero.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });
}

<h1><b>CAJAS APERTURADAS Y CERRADAS</b></h1>

<div class="box box-primary">
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-2 ">
                        <label class="control-label"> CAJERO: </label>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-4">
                        @Html.DropDownList("cboCajero", oListSelectItemCajero, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>     

<div class="box box-body">
    <div class="form-group">
        <div class="row">
            <center><p>MENSAJE</p></center>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-xs-4 col-xs-offset-4 col-xs-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4 ">
                    @Html.Partial("_CierreCaja")
                    @Html.Partial("_Msje")
                </div>
            </div>
        </div>
    </div>
</div>    

<div class="box box-primary">
    <div class="box-body">
        <div class="form-group">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="table table-responsive">
                        <div style="height:840px;overflow-x:scroll;overflow-y:scroll">
                            <table class="table table-striped">

                                <tr class="table-bordered">
                                    <th>CAJA</th>
                                    <th>FECHA</th>
                                    <th>MONTO DE APERTURA</th>
                                    <th>MONTO DE CIERRE</th>
                                    <th>ESTADO</th>
                                    <th>OPERACION</th>
                                </tr>

                                <tr>
                                    <td>CAJA 01</td>
                                    <td>10-10-2013</td>
                                    <td>300</td>
                                    <td>600</td>
                                    <td>CERRADO</td>
                                    <td>
                                        @Html.Partial("_Detalle")
                                        <button type="button" class="btn btn-default btn-xs">REGISTRAR</button>
                                    </td>
                                    
                                </tr>
                                <tr>
                                    <td>CAJA 02</td>
                                    <td>10-10-2013</td>
                                    <td>500</td>
                                    <td>900</td>
                                    <td>CERRADO</td>
                                    <td>
                                        @Html.Partial("_Detalle")
                                        <button type="button" class="btn btn-default btn-xs">REGISTRAR</button>
                                    </td>
                                   

                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


