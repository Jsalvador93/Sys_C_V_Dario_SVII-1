@{ 
    List<SelectListItem> oListSelectItemSucursal = new List<SelectListItem>();
    oListSelectItemSucursal.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });

    List<SelectListItem> oListSelectItemPtoVenta = new List<SelectListItem>();
    oListSelectItemPtoVenta.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });
}
<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info" data-toggle="modal" data-target="#MNuevo">Nuevo</button>

<!-- Modal -->
<div class="modal fade" id="MNuevo" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#0D69A6;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4>Nueva Caja</h4>
            </div>
            <div class="modal-body">
                <form class="form">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-md-3 col-lg-2">
                                @Html.Label("cboSucursal" , "Sucural:")
                            </div>
                            <div class="col-sm-8 col-md-9 col-lg-10">
                                @Html.DropDownList("cboSucursal", oListSelectItemSucursal, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-md-3 col-lg-2">
                                @Html.Label("cboPtoVenta", "Pto Venta:")
                            </div>
                            <div class="col-sm-8 col-md-9 col-lg-10">
                                @Html.DropDownList("cboPtoVenta", oListSelectItemPtoVenta, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-md-3 col-lg-2">
                                @Html.Label("txtCaja", "Caja:")
                            </div>
                            <div class="col-sm-8 col-md-9 col-lg-10">
                                @Html.TextBox( "txtCaja" , null , new { type = "text", placeholder="nombre de la caja", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-md-3 col-lg-2">
                                @Html.Label("txtFchIngreso", "F. Ingreso:")
                            </div>
                            <div class="col-sm-8 col-md-9 col-lg-10">
                                @Html.TextBox("txtFchIngreso", null ,new { type = "date", placeholder = "nombre de la caja", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal"  name="btnGuardar" id="btnGuardar"> GUARDAR </button>
                <button type="button" class="btn btn-default" data-dismiss="modal"  name="btnCancelar" id="btnCancelar"> CANCELAR </button>
            </div>
        </div>
    </div>
</div>
