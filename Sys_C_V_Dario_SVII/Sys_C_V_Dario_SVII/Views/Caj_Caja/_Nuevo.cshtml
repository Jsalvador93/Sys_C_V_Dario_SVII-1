@{
    List<SelectListItem> oListSelectItemSucursal = new List<SelectListItem>();
    oListSelectItemSucursal.Add(new SelectListItem { Text = "Seleccione...", Value = "0", Selected = true });

    List<SelectListItem> oListSelectItemPtoVenta = new List<SelectListItem>();
    oListSelectItemPtoVenta.Add(new SelectListItem { Text = "Seleccione...", Value = "0", Selected = true });
}
<!-- Trigger the modal with a button -->
<!-- Modal -->
<div class="modal fade" id="MNuevaCaja" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#0D69A6;">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4>Nueva Caja</h4>
            </div>
            <div class="modal-body">
                <form class="form">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-md-3 col-lg-2">
                                @Html.Label("cboSucursal", "Sucural:")
                            </div>
                            <div class="col-sm-8 col-md-9 col-lg-10">
                                @Html.DropDownList("NcboSucursal", oListSelectItemSucursal, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-md-3 col-lg-2">
                                @Html.Label("cboPtoVenta", "Pto Venta:")
                            </div>
                            <div class="col-sm-8 col-md-9 col-lg-10">
                                @Html.DropDownList("NcboPtoVenta", oListSelectItemPtoVenta, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-md-3 col-lg-2">
                                @Html.Label("txtCaja", "Caja:")
                            </div>
                            <div class="col-sm-8 col-md-9 col-lg-10">
                                @Html.TextBox("NtxtdscpCaja", null, new { type = "text", placeholder = "nombre de la caja", @class = "form-control" })

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-md-3 col-lg-2">
                                @Html.Label("txtFchIngreso", "F. Ingreso:")
                            </div>
                            <div class="col-sm-8 col-md-9 col-lg-10">
                                @Html.TextBox("NtxtFchIngreso", null, new { type = "date", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" name="btnGuardarCaja" id="btnGuardarCaja"> GUARDAR </button>
                <button type="button" class="btn btn-default" data-dismiss="modal" name="btnCancelar" id="btnCancelarCaja"> CANCELAR </button>
            </div>
        </div>
    </div>
</div>

