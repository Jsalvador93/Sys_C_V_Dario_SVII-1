

@{
    ViewBag.Title = "Index";
    List<SelectListItem> oListSelectItemSucursal = new List<SelectListItem>();
    oListSelectItemSucursal.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });
}

<h1><b>DISTRIBUCION CAJA GENERAL</b></h1>

<div class="box box-primary">
    <div class="box-body">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2 ">
                    <label class="control-label">ID</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                    @Html.TextBox("txtId", null, new { type = "text", disabled="true" ,@class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2 ">
                    <label class="control-label">FECHA INICIAL:</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                    @Html.TextBox("txtFchInicial", null, new { type = "date", disabled="true", @class = "form-control" })
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 ">
                    <label class="control-label">FECHA FINAL:</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                    @Html.TextBox("txtFchFinal", null, new { type = "date", disabled="true", @class = "form-control"})
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2 ">
                    <label class="control-label">CAJA INICIAL:</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                    @Html.TextBox("txtCajInicial", null, new { type = "number" , disabled = "true", @class = "form-control"})
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 ">
                    <label class="control-label">CAJA CHICA:</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                    @Html.TextBox("txtCajChica", null, new { type = "number", disabled = "true", @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>
<div class="box">
    <div class="box-body">
        <fieldset>
            <legend>Monto Actual</legend>
            <br />
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-2 ">
                        <label class="control-label">CAJA INICIAL:</label>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-4">
                        @Html.TextBox("txtCajInicial", null, new { type = "number", disabled = "true", @class = "form-control" })
                    </div>
                    <div class="col-sm-2 col-md-2 col-lg-2 ">
                        <label class="control-label">CAJA CHICA:</label>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-4">
                        @Html.TextBox("txtCajFinal", null, new { type = "number", disabled = "true", @class = "form-control" })
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>
<div class="box box-primary">
    <div class="box-body">
        <fieldset>
            <legend>Filtro</legend>
            <br />
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2  col-md-2  col-lg-2">
                        <label class="control-label">SUCURSAL:</label>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-4">
                        @Html.DropDownList("cboSucursal", oListSelectItemSucursal, new { @class = "form-control" })
                    </div>
                    &nbsp;
                    <div class="col-sm-2  col-md-2  col-lg-2 ">
                        <button type="button" class="control btn btn-default " style="width:100%"><span class="fa fa-search"></span></button>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>

<div class="box ">
    <div class="box-body">
        <div class="form-group">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="table-responsive">
                        <div style="height:840px;overflow-x:scroll;overflow-y:scroll" ">
                            <table class="table table-striped">
                                <tbody>
                                    <tr class="tr-deafult">
                                        <th class="text-danger">Sucursal</th>
                                        <th>Fecha Asignacion</th>
                                        <th>Caja Chica</th>
                                        <th>Caja Inicial</th>
                                        <th>Operacion Interna</th>
                                        <th>Operaciones Mantenimiento</th>
                                    </tr>
                                    <tr>
                                        <th>Sucursal#</th>
                                        <td>10-10-2013</td>
                                        <th>Caja Chica</th>
                                        <th>Caja Inicial</th>
                                        <th>
                                            <a class="btn btn-primary btn-xs" href="@Url.Action("Index","Caj_DistCajSucursal")" role="button">DISTRIBUIR</a>
                                        </th>
                                        <th>
                                            @Html.Partial("_Quitar")
                                            @Html.Partial("_Detalle")
                                            @Html.Partial("_Modificar")
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
