@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Sys_C_V_Dario_SVII.Models.Rp_ReporteProducto.ReporteProductoBE>

<center>
    <h2><b>REPORTE PRODUCTO</b></h2>
</center>



<div class="box box-primary">
    <h4>Filtro</h4>
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        Filtro
                    </div>
                    <div class="col-md-3">
                        <select class="form-control">
                            <option value="0" selected>todos</option>
                            <option value="1">Codigo</option>
                            <option value="2"> Nombre</option>
                            <option value="3"> Marca</option>

                        </select>
                    </div>

                    <div class="col-md-4">
                        <input type="text" name="txtFiltro" id="txtFiltro" placeholder="Ingrese el Filtro" class="form-control" />
                    </div>
                    <div class="col-md-3">

                        <button type="button" class="form-control btn btn-info">Aplicar</button>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
<div class="box box-primary">
    <p>Tabla Producto</p>
    <div class="box-body">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>Fecha Registro Producto</th>
                                <th>Codigo</th>
                                <th>Seccion</th>
                                <th>Nombre</th>
                                <th>Marca</th>
                                <th>Precio Compra</th>
                                <th>Precio Venta</th>
                            </tr>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.objProRgtrProductoBE.dt_fchRegistro</td>
                                        <td>@item.objProProductoBE.c_codProducto</td>
                                        <td>@item.objProProductoBE.oSeccionBE.vc_dscpSeccion</td>
                                        <td>@item.objProProductoBE.oTipoProductoBE.vc_dscpTipProducto</td>
                                        <td>@item.objProProductoBE.oMarcaBE.vc_dscpMarca</td>
                                        <td>@item.objProPrecioBE.f_prcCompra</td>
                                        <td>@item.objProPrecioBE.f_prcVenta</td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
