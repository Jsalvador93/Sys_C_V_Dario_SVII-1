@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> oListSelectItemFiltro = new List<SelectListItem>();
    oListSelectItemFiltro.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });
    oListSelectItemFiltro.Add(new SelectListItem { Text = "ID", Value = "1", Selected = false });
}

<!-- Content Header (Page header) -->

<h1><b>REPORTE PEDIDO</b></h1>

<!-- Main content -->
<div class="box box-primary">
    <div class="box-body">
        <div class="form-group ">
            <div class="row">
                <div class="col-sm-1 col-md-1 col-lg-1">
                    <label class="control-label"> FILTRO: </label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                    @Html.DropDownList("cboFiltro", oListSelectItemFiltro, new { @class = "form-control" })
                </div>
                &nbsp;
                <div class="col-sm-4 col-md-4 col-lg-4">
                    @Html.TextBox("txtFiltro", null, new { @class = "form-control" })
                </div>
                &nbsp;
                <div class="col-sm-2 col-md-2 col-lg-2">
                    <button type="button" name="btnBuscar" class="btn btn-default" style="width:100%"><span class="glyphicon glyphicon-search"></span></button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="box">
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="table-responsive">
                            <div style="height:840px;overflow-x:scroll;overflow-y:scroll">
                                <table class="table table-striped" name="tblPedido">
                                    <tr class="table-bordered">
                                        <th class="text-center"> ID</th>
                                        <th class="text-center">Fecha</th>
                                    </tr>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.in_idDenominacion</td>
                                                <td>@item.st_descpDenominacion</td>
                                            </tr>
                                        }
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>