@model Sys_C_V_Dario_SVII.Models.Sys_Impuestos.Sys_ImpuestoBE

@{
    ViewBag.Title = "Index";
}

 <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Registros de impuestos</h1>
            <ol class="breadcrumb">
                <li><a href="#"></a>Empresas</li>
                <li class="active">Registros de impuestos</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">

                    <div class="box box-primary">
                        <form role="form">
                            <div class="form-group">
                                <div class="box-body">
                                    <div>
                                        <h4 class="col-md-1">Impuesto: </h4>
                                        <div class="col-md-2">
                                            <select class="form-control">
                                                <option>IGV</option>
                                                <option>ITF</option>
                                                <option>RUS</option>

                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="CantidadBotones">
                                                <button type="button" class="btn"><span class="glyphicon glyphicon-search"></span></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="box box-body">
                <form role="form">
                    <div class="form-group">
                        <div class="box-body">
                            <div>
                                <div class="col-md-2">

                                    <button type="button" class="btn btn-block btn-primary">Actualizar</button>

                                </div>
                                <div class="col-lg-12">
                                    <div class="table-responsive">
                                        <br />
                                        <table class="table table-bordered table-hover table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Descripcion</th>
                                                    <th>Abreviatura</th>
                                                    <th>Porcentaje %</th>
                                                    <th>Fecha de Registro</th>
                                                    <th>Operaciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>Impuesto General a las Ventas</td>
                                                    <td>IGV</td>
                                                    <td>20</td>
                                                    <td>22/11/2016</td>
                                                    <td>
                                                        <button type="button" class="btn btn-block btn-primary">Actualizar</button>
                                                        <button type="button" class="btn btn-block btn-primary">Quitar</button>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Regimen Unico Simplificado</td>
                                                    <td>RUS</td>
                                                    <td>10</td>
                                                    <td>21/10/2016</td>
                                                    <td>
                                                        <button type="button" class="btn btn-block btn-primary">Actualizar</button>
                                                        <button type="button" class="btn btn-block btn-primary">Quitar</button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="CantidadBotones">
                                        <button type="button" class="btn btn-primary">Guardar</button>
                                        <button type="button" class="btn btn-default">Cancelar</button>

                                    </div>
                                    <style>
                                        .CantidadBotones {
                                            text-align: right;
                                        }
                                    </style>

                                </div>
                                <script type="text/javascript">
                                        $('.clockpicker').clockpicker();
                                </script>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
