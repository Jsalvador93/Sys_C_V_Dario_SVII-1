
@{
    List<SelectListItem> oListSelectItemDenominacion = new List<SelectListItem>();
    oListSelectItemDenominacion.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });
 }

<!-- Button trigger modal -->
    <button type="button" class="btn btn-primary " name="btnNuevo" data-toggle="modal" data-target="#Nuevo">NUEVO</button>
    
<!-- Modal NUEVO-->
<div class="modal fade" id="Nuevo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document" >
        <div class="modal-content">
            <form class="form">
                <div class="modal-header" style="background-color:#0D69A6">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <center><h4 class="modal-title" style="color:#ffffff">NUEVO CONCEPTO</h4></center>
                </div>
                <div class="modal-body">
                       <div class="form-group">
                            <div class="row">
                                <div class="col-sm-4 col-md-4 col-lg-4">
                                    <label class="control-label">F. DE REGISTRO:</label>
                                </div>
                                <div class="col-sm-8 col-md-8 col-lg-6">
                                    @Html.TextBox("txtFchRegistro", null, new { type = "datetime", @class = "form-control" })
                                </div>
                            </div>
                        </div>
                   
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-4 col-md-4 col-lg-4">
                                    <label class="control-label">DESCRIPCION:</label>
                                </div>
                                <div class="col-sm-8 col-md-8 col-lg-6">
                                    @Html.TextBox("txtDescConcepto",null, new { Type = "text", placeholder = "Ingrese descripcion de concepto" , @class = "form-control"})
                                </div>
                            </div>
                       </div>

                       <div class="form-group">
                           <div class="row">
                               <div class="col-sm-4 col-md-4 col-lg-4">
                                   <label class="control-label">DENOMINACION:</label>
                               </div>
                               <div class="col-sm-8 col-md-8 col-lg-6">
                                   @Html.DropDownList("cboDenominacion", oListSelectItemDenominacion, new { @class = "form-control" })
                               </div>
                               <div class="col-lg-1">
                                   <button type="button" name="btnNuevo" class="btn btn-default">NUEVO</button>
                               </div>
                           </div>
                      </div>
                </div>

                <div class="modal-footer">
                    <button type="button" name="btnGuardar" id="btnGuardar" class="btn btn-primary" data-dismiss="modal">GUARDAR</button>
                    <button type="button" name="btnSalir" id="btnSalir" class="btn btn-default" data-dismiss="modal">SALIR</button>
                </div>
            </form>
        </div>
    </div>
</div>
