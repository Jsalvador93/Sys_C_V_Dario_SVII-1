
@{
    List<SelectListItem> oListSelectItemDenominacion = new List<SelectListItem>();
    oListSelectItemDenominacion.Add(new SelectListItem { Text = "Seleccione...", Value = "0", Selected = true });
 }

<!-- Button trigger modal -->

<!-- Modal NUEVO-->
<div class="modal fade" id="MNuevaConcepto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#0D69A6">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <center><h4 class="modal-title" style="color:#ffffff">NUEVO CONCEPTO</h4></center>
            </div>
            <div class="modal-body">
                <form class="form">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">
                                <label class="control-label">F. REGISTRO:</label>
                            </div>
                            <div class="col-sm-9 col-md-9 col-lg-9">
                                @Html.TextBox("NtxtFchRegistro", null, new { type = "date", @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">
                                <label class="control-label">DESCRIPCION:</label>
                            </div>
                            <div class="col-sm-9 col-md-9 col-lg-9">
                                @Html.TextBox("NtxtDscpConcepto", null, new { Type = "text", placeholder = "Ingrese descripcion de concepto", @class = "form-control" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-lg-3">
                                <label class="control-label">DENOMINACION:</label>
                            </div>
                            <div class="col-sm-7 col-md-7 col-lg-7">
                                @Html.DropDownList("NcboDenominacion", oListSelectItemDenominacion, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-2 col-md-2 col-lg-2">
                                <button type="button" name="btnNuevo" class="btn btn-info">NUEVO</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" name="btnGuardar" id="btnGuardar" class="btn btn-primary">GUARDAR</button>
                <button type="button" name="btnCancelar" id="btnCancelar" class="btn btn-default">CANCELAR</button>
            </div>
        </div>

    </div>
</div>
