

    @{ 
        List<SelectListItem> oListSelectItemDenominacion = new List<SelectListItem>();
        oListSelectItemDenominacion.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });
    }
<button type="button" class="btn btn-xs" name="btnModificar" style="color:#ffffff;background-color:#2FCB21" data-toggle="modal" data-target="#Modificar">MODIFICAR</button>
<!--MODAL MODIFICAR-->
<div class="modal fade " id="Modificar" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form class="form">
                <div class="modal-header" style="background-color:#2FCB21">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <center><h4 class="modal-title" style="color:#ffffff">MODIFICAR CONCEPTO</h4></center>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 col-md-4 col-lg-4">
                                <label class="control-label">DESCRIPCION:</label>
                            </div>
                            <div class="col-sm-8 col-md-8 col-lg-7">
                                @Html.TextBox("txtDescripcion",null,new { type = "text", @class ="form-control"  })
                            </div>
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="row">
                            <div class="col-sm-4 col-md-4 col-lg-4">
                                <label class="control-label">DENOMINACION:</label>
                            </div>
                            <div class="col-sm-8 col-md-8 col-lg-7">
                                @Html.DropDownList("cboDenominacion", oListSelectItemDenominacion, new {  @class="form-control" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" name="btnGuardar" id="btnGuardar" class="btn btn-primary" >GUARDAR</button>
                    <button type="button" name="btnCancelar" id="btnCancelar" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
            </form>
         </div>
      </div>
</div>


