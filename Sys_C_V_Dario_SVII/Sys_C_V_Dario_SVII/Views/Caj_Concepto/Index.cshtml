

@{
    ViewBag.Title = "Index";

    List<SelectListItem> oListSelectItemFiltro = new List<SelectListItem>();
    oListSelectItemFiltro.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });
    oListSelectItemFiltro.Add(new SelectListItem { Text = "ID", Value = "1", Selected = false });
    oListSelectItemFiltro.Add(new SelectListItem { Text = "Descripcion", Value = "2", Selected = false });
}

<!-- Content Header (Page header) -->
        <h1><b>CONCEPTO</b></h1>
<!-- Main content -->
       
<div class="box box-primary">
    <div class="box-body">
        <div class="form-group ">
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-1">
                    <label > FILTRO: </label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                   @Html.DropDownList("cboFiltro", oListSelectItemFiltro, new { @class = "form-control" })
                </div>&nbsp;
                <div class="col-sm-4 col-md-4 col-lg-4">
                    @Html.TextBox("txtFiltro", null, new { type="text" , @class = "form-control" })
                </div>&nbsp;
                <div class="col-sm-2 col-md-2 col-lg-2">
                    <button type="button" class="btn btn-default" name="btnBuscar" style="width:100%"><span class="glyphicon glyphicon-search"></span></button>
                </div>
            </div>
        </div>
    </div>
</div>        

 <div class="box">
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        @Html.Partial("_Nuevo")
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="table-responsive">
                            <div style="height:840px;overflow-x:scroll;overflow-y:scroll">
                                <table class="table table-striped" name="tblConcepto">
                                    <tr class="table-bordered">
                                        <th class="text-center"> ID </th>
                                        <th class="text-center">DESCRIPCION</th>
                                        <th class="text-center">DENOMINACION</th>
                                        <th>OPERACIONES</th>
                                    </tr>

                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>
                                            @Html.Partial("_Quitar")
                                            @Html.Partial("_Detalle")
                                            @Html.Partial("_Modificar")
                                        </td>

                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

        

