

@{
    ViewBag.Title = "Index";
    List<SelectListItem> oListSelectItemSucursal = new List<SelectListItem>();
    oListSelectItemSucursal.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });

    List<SelectListItem> oListSelectItemPtoVenta = new List<SelectListItem>();
    oListSelectItemPtoVenta.Add(new SelectListItem { Text = "Todos", Value = "-1", Selected = true });
}


<!-- Content Header (Page header) -->
<h1><b>DISTRIBUCION DE CAJA SUCURSAL</b></h1>

<!-- Main content -->

<div class="box box-primary">
    <div class="box-body">

        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2 ">
                    <label class="control-label"> SUCURSAL: </label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                    @Html.DropDownList("cboSucursal", oListSelectItemSucursal, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2  ">
                    <label class="control-label">DESDE:</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                   @Html.TextBox("txtDesde", null, new {  type = "date" ,@class = "form-control"}) 
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2  ">
                    <label class="control-label">HASTA:</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4 ">
                    @Html.TextBox("txtHasta", null, new { type = "date", @class = "form-control" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-2  ">
                    <label class="control-label">CAJA INICIAL:</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                    @Html.TextBox("txtCajInicial", null, new {type = "number" , @class = "form-control"})
                   
                </div>
                <div class="col-sm-2 col-md-2 col-lg-2 ">
                    <label class="control-label">CAJA CHICA:</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                    @Html.TextBox("txtCajChica", null, new { type = "number", @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>

<div class="box box-body">
    <div>
        <h4>DISPONIBLE</h4>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2 col-md-2 col-lg-2 ">
                <label class="control-label">CAJA INICIAL:</label>
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4">
                @Html.TextBox("txtCajInicial", null, new { type = "number", @class = "form-control" })
            </div>
            <div class="col-sm-2 col-md-2 col-lg-2 ">
                <label class="control-label">CAJA CHICA:</label>
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4">
                @Html.TextBox("txtCajChica", null, new { type = "number", @class = "form-control" })
            </div>
        </div>
    </div>
</div>

<div class="box box-primary">

    <div class="box-body">
        <div>
            <h4>FILTRO</h4>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2  col-md-2  col-lg-2">
                    <label class="control-label">PUNTO DE VENTA:</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-4">
                  @Html.DropDownList("cboPtoVenta", oListSelectItemPtoVenta, new { @class = "form-control" }) 
                </div>
                &nbsp;
                <div class="col-sm-2  col-md-2  col-lg-2 ">
                    <button type="button" class="control btn btn-default " style="width:100%"><span class="fa fa-search"></span></button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="box">
    <div class="box-body">
        <div class="form-group">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="table-responsive">
                        <div style="height:840px;overflow-x:scroll;overflow-y:scroll">
                            <table class="table table-striped">
                                <tr class="table-bordered">
                                    <th>Pto Venta</th>
                                    <th>Fecha</th>
                                    <th>C. Chica</th>
                                    <th>C. Inicial</th>
                                    <th>Op. Internas</th>
                                    <th>Op. Mantenimiento</th>

                                </tr>
                                <tr>
                                    <td>Pto Venta 1</td>
                                    <td>10-10-2013</td>
                                    <td>200</td>
                                    <td>500</td>
                                    <td>

                                        @Html.Partial("_Asignar")

                                        <a class="btn btn-primary btn-xs" href="@Url.Action("Index","Caj_DistCajPtoVenta")" role="button">DISTRIBUIR</a>

                                    </td>
                                    <td>
                                        @Html.Partial("_Quitar")
                                        @Html.Partial("_Detalle")
                                        @Html.Partial("_Modificar")
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







