
 <button type="button" class="btn btn-xs" style="color:#ffffff;background-color:#ffd800" name="btnAsignar" data-toggle="modal" data-target="#Asignar">ASIGNAR</button>

<div class="modal fade" id="Asignar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#ffd800">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <center><h4 class="modal-title">ASIGNAR</h4></center>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            <label class="control-label">FECHA:</label>
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-7">
                            @Html.TextBox("txtFch", null, new { type = "date",@class ="form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            <label class="control-label">CAJA INICIAL:</label>
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-7">
                            @Html.TextBox("txtCajInicial", null, new { type = "number" , @class = "form-control"})
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            <label class="control-label">CAJA CHICA:</label>
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-7">
                            @Html.TextBox("txtCajchica", null, new { type = "number", @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" name="btnGuardar" id="btnGuardar" class="btn btn-primary" data-dismiss="modal">GUARDAR</button>
                <button type="button" name="btnCancelar" id="btnCancelar" class="btn btn-default" data-dismiss="modal">CANCELAR</button>
            </div>
        </div>
    </div>
</div>

