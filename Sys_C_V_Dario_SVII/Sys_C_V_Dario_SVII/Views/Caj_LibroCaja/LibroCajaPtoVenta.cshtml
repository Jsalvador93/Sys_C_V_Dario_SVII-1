
@{
    ViewBag.Title = "LibroCajaPtoVenta";
}

<section>
    <h1>Libro de Caja Pto Venta</h1>
</section>
<div class="box">
    <p1> Filtro </p1>
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <label for="_desde">Desde:</label>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-5">
                        @Html.TextBox("txtDesde", null, new { type = "date", @class = "form-control" })
                    </div>
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <label for="_hasta" name="_hasta">Hasta:</label>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-5">
                        @Html.TextBox("txtHasta", null, new { type = "date", @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <button type="button" class="btn btn-default" name="btnFiltrar" id="btnFiltrar">Filtrar</button>
                    </div>
                    <div class="col-sm-2 col-md-2 col-lg-1">
                        <button type="button" class="btn btn-default" name="btnNuevo" id="btnNuevo"> Nuevo</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="box box-primary">
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <tr>
                                    <th>Desde</th>
                                    <th>Hasta</th>
                                    <th>Caja Inicial</th>
                                    <th>Total Ingreso</th>
                                    <th>Total Egreso</th>
                                    <th>Estado</th>
                                    <th>Operacion</th>
                                </tr>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th>
                                        @Html.Partial("_DetalleLibroCaja")
                                    </th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

