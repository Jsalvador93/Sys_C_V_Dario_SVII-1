

@{
ViewBag.Title = "Index";

}

<!-- Content Header (Page header) -->
<h1><b> CAJA GENERAL</b></h1>

<!-- Main content -->
<div class="box box-primary">
    <div class="box-body">
        <div>
            <h4>FILTRO</h4>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-md-2 col-lg-1 ">
                    <label class="control-label">DESDE:</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-5">
                    @Html.TextBox("txtDesde", null, new { type = "date", @class = "form-control" })
                </div>
                <div class="col-sm-2 col-md-2 col-lg-1 ">
                    <label class="control-label">HASTA:</label>
                </div>
                <div class="col-sm-4 col-md-4 col-lg-5">
                    @Html.TextBox("txtHasta", null, new { type = "date", @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-sm-offset-10 col-md-2 col-md-offset-10 col-lg-2  col-lg-offset-10 ">
                    <button type="button" class="btn btn-default" style="width:100%" name="btnFiltrar"><span class="glyphicon glyphicon-search"></span></button>
                </div>

            </div>
        </div>
    </div>
</div>    

<div class="box dox-default">
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        @Html.Partial("_Nuevo")
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="table-responsive">
                            <div style="height:840px;overflow-x:scroll;overflow-y:scroll">
                                <table class="table table-striped" name="tbl_cg">
                                    <tr class="table-bordered">

                                        <th class="text-center">ID</th>
                                        <th class="text-center">FECHA INICIAL</th>
                                        <th class="text-center">FECHA FINAL</th>
                                        <th class="text-center">ESTADO</th>
                                        <th class="text-center">OPERACIONES INTERNAS</th>
                                        <th>OPERACIONES DE MANTENIMIENTO</th>

                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td>
                                            <a class="btn btn-primary btn-xs" href="@Url.Action("Index","Caj_DistCajGeneral")" role="button">DISTRIBUIR</a>
                                        </td>
                                        <td>
                                            @Html.Partial("_Quitar")
                                            @Html.Partial("_Detalle")
                                            @Html.Partial("_Modificar")
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>