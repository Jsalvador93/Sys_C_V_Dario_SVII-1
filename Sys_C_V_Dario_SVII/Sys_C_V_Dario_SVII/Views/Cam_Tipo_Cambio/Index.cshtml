                        <div class="box-body">
                            <div>
                                <h4 class="col-md-3">Moneda/pais: </h4>

                                <div>
                                    <div class="col-md-3">
                                        <select class="form-control">
                                            <option>USD/USA</option>
                                            <option>SOL/PERU</option>
                                        </select>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <form role="form">
                    <div class="form-group">
                        <div class="box-body">
                            <div>
                                <h4 class="col-md-3">A: </h4>

                                <div>
                                    <div class="col-md-3">
                                        <select class="form-control">
                                            <option>SOL/PERU</option>
                                            <option>USD/USA</option>
                                        </select>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </form>


                <form role="form">
                    <div class="form-group">
