
@{
    ViewBag.Title = "Index";
}
    <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Nuevo Rol</h1>
        <ol class="breadcrumb">
            <li><a href="#">Roles</a></li>
            <li class="active">Nuevo Rol</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">

                    <div class="box box-primary">

                        <form role="form">
                            <div class="form-group">
                                <div class="box-body">
                                    <div>
                                        <h4 class="col-md-3">Codigo de Rol : </h4>
                                        <h4 class="col-md-4">00001</h4>
                                        <h4 class="col-md-3">Fecha de Registro:</h4>
                                        <h4 class="col-md-2">21/11/2016</h4>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="box box-body">
                    <form role="form">
                        <div class="form-group">
                            <div class="box-body">
                                <div>
                                    <div class="form-group">
                                        <div class="col-md-4">
                                            <h4 for="NombreDeRol">Nombre del Rol : </h4>
                                        </div>
                                        <input type="text" class="form-control" id="vc_descripcionModulo" placeholder="cajero">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                    <div class="col-lg-6">
                        <button type="button" class="btn btn-primary " data-toggle="modal" data-target="#myModal"> SELECCIONAR FUNCIONES </button>
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <form class="form-horizontal">
                                        <div class="modal-header " style="background-color:#0D69A6">
                                            <center><h4 style="color:#ffffff">FUNCIONES </h4></center>
                                        </div>
                                        <br />
                                        <div class="modal-body">
                                            <div class="row">
                                                <br />
                                                <div class="col-md-4">
                                                    <label>Seleccionar Rol :</label>
                                                    <div class="col-lg-6">
                                                        <input type="text" id="i_idModulo">
                                                    </div>
                                                </div>
                                                <div class="col-md-4 col-md-offset-4">
                                                    <label for="MODULO">Selccionar Modulo : </label>
                                                    <select>
                                                        <option></option>
                                                        <option>Caja</option>
                                                        <option>Venta</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <br />
                                                <br />
                                                <br />
                                                <div class="col-xs-6 col-sm-4">
                                                    <label for="Name"> funciones Asignadas : </label>
                                                    <select multiple class="form-control">
                                                        <option>Registrar Venta</option>
                                                        <option>Ver stock</option>
                                                    </select>
                                                </div>
                                                <br />
                                                <div class="col-xs-6 col-sm-4">

                                                    <div class="btn-toolbar" role="toolbar">
                                                        <center>
                                                            <button type="button" class="btn btn-default btn-lg">
                                                                <span class="glyphicon glyphicon-chevron-right"></span>
                                                            </button>
                                                        </center>
                                                    </div>
                                                    <div class="btn-toolbar" role="toolbar">
                                                        <center>
                                                            <button type="button" class="btn btn-default btn-lg">
                                                                <span class="glyphicon glyphicon-chevron-left"></span>
                                                            </button>
                                                        </center>
                                                    </div>
                                                </div>

                                                <div class="col-xs-6 col-sm-4">
                                                    <label for="Name"> Lista de Funciones :</label>
                                                    <select multiple class="form-control">
                                                        <option>Registrar Venta</option>
                                                        <option>Ver stock</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <br />
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-primary" data-dismiss="modal">GUARDAR</button>
                                                <button type="button" class="btn btn-default" data-dismiss="modal">SALIR</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Guardar Cambios</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
                <br>
                <br>
                <div class="box-body">
                </div>
                <script type="text/javascript">
                    $('.clockpicker').clockpicker();
                </script>
            </div>
        </div>

    </section>
</div>