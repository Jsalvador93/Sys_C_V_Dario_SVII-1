@model Sys_C_V_Dario_SVII.Models.Mod_Compra.Pro_Producto.Pro_ProductoBE

    <div class="modal fade" id="MPrecios" role="dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" id="close" data-dismiss="modal">&times;</button>
                    <h3 class="modal-title" id="exampleModalLabel">Precios</h3>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <form>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h4 class="col-md-3">Código producto:</h4>
                                    <h4 class="col-md-3">@Html.DisplayFor(model => model.c_codProducto)</h4>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h4 class="col-md-3">Descripción producto:</h4>
                                    <h4 class="col-md-3">@Html.DisplayFor(model => model.vc_dscpProducto)</h4>
                                    <h4 class="col-md-2">Marca:</h4>
                                    <h4 class="col-md-3">@Html.DisplayFor(model => model.oMarcaBE.vc_dscpMarca)</h4>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h4 class="col-md-3">Fecha:</h4>
                                    <h4 class="col-md-2">10/11/2016</h4>
                                    <button type="button" class="btn btn-info col-md-3 col-md-offset-1">Nuevo</button>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <h4 class="col-md-3">Precio Compra:</h4>
                                    <div class="col-md-3">
                                        <input class="form-control input-sm" type="text" class="col-md-3">
                                    </div>
                                    <h4 class="col-md-3">Precio Venta:</h4>
                                    <div class="col-md-3">
                                        <input class="form-control input-sm" type="text" class="col-md-3">
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover table-striped">
                                        <thead>
                                            <tr>
                                                <th>Registro</th>
                                                <th>Precio de Compra</th>
                                                <th>Precio de Venta</th>
                                                <th>Precio de Utilidad</th>
                                            </tr>
                                        </thead>
@if (Model != null)
{
                                        foreach (var item in Model.oListPrecio)
                                        {
                                        <tbody>
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.dt_fchRgtrPrecio)</td>
                                                <td>@Html.DisplayFor(modelItem => item.f_prcCompra)</td>
                                                <td>@Html.DisplayFor(modelItem => item.f_prcVenta)</td>
                                                <td>@Html.DisplayFor(modelItem => item.f_utilidad)</td>
                                            </tr>
                                        </tbody>}}
                                    </table>
                                </div>
                            </div>

                        </form>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Segundo Modal / Precio Producto -->