@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model IEnumerable<Sys_C_V_Dario_SVII.Models.Rp_ReporteVenta.ReporteVentaBE>

<center>
    <h2><b>REPORTE VENTA</b></h2>
</center>



<div class="box box-primary">
    <h4>Filtro</h4>
    <div class="box-body">
        <form class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        Filtro
                    </div>
                    <div class="col-md-3">
                        <select class="form-control">
                            <option value="0" selected>todos</option>
                            <option value="1">Número de Comprobante</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <input type="text" name="txtFiltro" id="txtFiltro" placeholder="Ingrese el Filtro" class="form-control" />
                    </div>
                    <div class="col-md-3">

                        <button type="button" class="form-control btn btn-info">Aplicar</button>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
<div class="box box-primary">
    <p>Tabla Producto</p>
    <div class="box-body">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th>Fecha de Registro</th>
                                <th>Numero Comprobante</th>
                                <th>Tipo de Comprobante</th>
                                <th>Vendedor</th>
                                <th>Cliente</th>
                                <th>Moneda</th>
                            </tr>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
