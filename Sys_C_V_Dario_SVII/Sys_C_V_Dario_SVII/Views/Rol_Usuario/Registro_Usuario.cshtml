
@{
    ViewBag.Title = "Registro_Usuario";
}

 <!-- Main NUEVO USUARIO -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">

                <div class="box box-primary">
                    <form role="form">
                        <div class="form-group">
                            <div class="box-body">
                                <div class="form-group">
                                    <div class="col-md-4">
                                        <label for="Tipo_Documento">Tipo de Documento : </label>
                                    </div>
                                    <div class="col-md-4">
                                        <select class="form-control">
                                            <option></option>
                                            <option>DNI</option>
                                            <option>CARNET EXTRANJERIA</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" id="c_codPersona">
                                    </div>

                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- nombre apellidos  -->
        <div class="col-md-12">
            <div class="box box-primary">

                <div class="box box-primary">
                    <form role="form">
                        <div class="form-group">
                            <div class="box-body">
                            </div>
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label for="Nombres">Nombres : </label>
                                </div>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" id="vc_nomPersona">
                                </div>
                                <div class="box-body">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4">
                                <label for="Ape_Pat">Apellido Paterno : </label>
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="vc_apPaterno">
                            </div>
                            <div class="col-md-4">
                                <label for="Ape_Mat">Apellido Materno : </label>
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="vc_apMaterno">
                            </div>
                            <div class="col-md-4">
                                <label for="Ape_Mat">Correo Electronico : </label>
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="vc_drcWeb">
                            </div>
                            <div class="box-body">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- BOTONOES -->
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">

                <div class="box box-primary">
                    <form role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <div class="col-md-3">

                                    <div class="col-md-12">
                                        <div class="CantidadBotones">
                                            <button type="button" class="btn btn-primary">Guardar</button>
                                            <button type="button" class="btn btn-primary">Cancelar</button>
                                        </div>
                                        <style>
                                            .CantidadBotones {
                                                text-align: right;
                                            }
                                        </style>

                                    </div>
                                    <script type="text/javascript">
                                            $('.clockpicker').clockpicker();
                                    </script>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
        </div>

